<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.7),rgba(0,0,0,0.7)), url(https://images.unsplash.com/photo-1485846234645-a62644f84728?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2059&q=80);">
  <div class="container">
    <h1><%= @list.name %></h1>
    <a class="btn btn-light rounded-pill mr-3" href="#content">Experience existing lists</a>
    <a class="btn btn-outline-light rounded-pill mx-2" href="#" data-bs-toggle="modal" data-bs-target="#staticBackdropMovie">+ Add movie</a>
  </div>
</div>
<div class="container my-3">
  <div class="row g-3 justify-content-space-evenly" style="gap: 5px;">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card overflow-hidden mb-3 px-0 col-12 col-lg-6">
        <div class="row g-0">
          <div class="col-md-5">
            <img src="<%= bookmark.movie.poster_url %>" class="img-fluid m-0" alt="<%= bookmark.movie.title %>">
          </div>
          <div class="col-md-7">
            <div class="card-body">
              <h5 class="card-title"><%= bookmark.movie.title %></h5>
              <p class="card-text"><%= bookmark.movie.overview %></p>
              <p class="card-text">"<%= bookmark.comment %>"</p>
              <p><%= link_to "DELETE", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class:"btn btn-outline-dark rounded-pill"%></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="d-flex justify-content-between">
    <%= link_to "< back", lists_path, class: "btn btn-outline-secondary rounded-pill" %>
    <%= link_to "+ Add Movie", new_list_bookmark_path(@list), class: "btn btn-outline-primary rounded-pill" %>
  </div>
</div>

<!-- Modal -->
  <div class="modal fade" id="staticBackdropMovie" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog rounded">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="staticBackdropLabel">Add a Movie</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <%= render "bookmarks/form", list: @list, bookmark: @bookmark %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-outline-secondary rounded-pill" data-bs-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
